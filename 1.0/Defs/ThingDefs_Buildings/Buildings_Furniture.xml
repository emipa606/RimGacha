<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="GachaponCollectionBase" ParentName="FurnitureWithQualityBase" Abstract="True">
    <thingClass>RimGacha.Building_GachaponCollection</thingClass>
    <description>A small table to place gacha figures on to display them nicely.</description>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <!--<staticSunShadowHeight>0.06</staticSunShadowHeight>-->
    <pathCost>20</pathCost>
    <fillPercent>0.2</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <surfaceType>Item</surfaceType>
    <comps>
      <li Class="CompProperties_RoomIdentifier">
        <roomStat>Impressiveness</roomStat>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="GachaponCollectionBase">
    <defName>GachaponCollection4x1c</defName>
    <label>gachapon display table (4x1)</label>
    <graphicData>
      <texPath>Things/Building/Furniture/GachaponCollection4x1</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <size>(4,1)</size>
    <statBases>
      <MaxHitPoints>65</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Mass>5</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
    </statBases>
    <costStuffCount>35</costStuffCount>
  </ThingDef>
  <ThingDef ParentName="GachaponCollectionBase">
    <defName>GachaponCollection2x2c</defName>
    <label>gachapon display table (2x2)</label>
    <graphicData>
      <texPath>Things/Building/Furniture/GachaponCollection2x2</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <rotatable>false</rotatable>
    <size>(2,2)</size>
    <statBases>
      <MaxHitPoints>65</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Mass>5</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
    </statBases>
    <costStuffCount>35</costStuffCount>
  </ThingDef>
</Defs>
